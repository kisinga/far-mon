#pragma once

// WiFi Configuration for Remote device - DRY Implementation
// To enable, define WIFI_CONFIG_HEADER in your remote entry file BEFORE including common_app.h:
//   #define WIFI_CONFIG_HEADER "../remote/wifi_config.h"
//   #include "../lib/common_app.h"

// Per-device configuration is defined in ../remote/config.h
#include "config.h"

// Remote-specific WiFi configuration
static WifiManager::Config wifiConfig = [](){
    RemoteConfig cfg = buildRemoteConfig();
    WifiManager::Config wm{};
    wm.ssid = cfg.communication.wifi.ssid;
    wm.password = cfg.communication.wifi.password;
    wm.reconnectIntervalMs = cfg.communication.wifi.reconnectIntervalMs;
    wm.statusCheckIntervalMs = cfg.communication.wifi.statusCheckIntervalMs;
    return wm;
}();

// For backward compatibility, define the old constants
static const char WIFI_SSID[] = "YourWiFiNetwork";
static const char WIFI_PASSWORD[] = "YourWiFiPassword";


